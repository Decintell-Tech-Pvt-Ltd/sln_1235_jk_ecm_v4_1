<script>
       function validateInputCode() {
        var inputElement = document.getElementById('txtCustomerCode');
        var inputValue = inputElement.value.trim();

        // Allow only letters
        var onlyLetters = inputValue.replace(/[^a-zA-Z]/g, '');

        // Trim to 2 characters max
        if (onlyLetters.length > 2) {
            onlyLetters = onlyLetters.substring(0, 2);
        }

        inputElement.value = onlyLetters;

        // Validation messages
        if (onlyLetters.length === 2 || onlyLetters === '') {
            document.getElementById('sptxtCustomerCode').innerText = '';
        } else {
            document.getElementById('sptxtCustomerCode').innerText = 'Only two alphabet characters are allowed.';
        }
    }
    function validateInput(event) {
        const input = event.target.value;
        const regex = /^[a-zA-Z\s]*$/; // Only letters and spaces allowed

        if (!regex.test(input)) {
            // Display error message using jQuery if jQuery is available
            if (typeof $ !== 'undefined') {
                $("#sptxtCustomer").html("Enter Customer Name");
                $("#sptxtCustomer").css("display", "block");
            } else {
                // If jQuery is not available, use vanilla JavaScript to display error message
                const errorElement = document.getElementById("sptxtCustomer");
                if (errorElement) {
                    errorElement.textContent = "Enter Customer Name";
                    errorElement.style.display = "block";
                }
            }

            // Remove invalid characters from the input
            event.target.value = input.replace(/[^a-zA-Z\s]/g, '');
        }
    }
</script>

