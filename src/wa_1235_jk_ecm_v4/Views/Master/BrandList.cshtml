@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model wa_1235_jk_ecm_v4.Models.Master
@{
    ViewData["Title"] = "BrandList";
    Layout = "~/Views/Shared/_ECMMaster.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3">
                <h5>Brand</h5>
            </div>
            <div class="col-lg-9">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#" onclick="UserDetailChange('Index')">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">ECM</a></li>
                    <li class="breadcrumb-item active">Master</li>
                    <li class="breadcrumb-item active">Brand</li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="btnwidth50 float-right ">
                    <button type="button"
                            class="btn btn-block bg-gradient-danger btn-xs"
                            title="Go to Home"
                            onclick="location.href='@Url.Action("Index", "Home")';">
                        Back
                    </button>
                </div>
                <div class="btnwidth50 float-right mr-1">
                    <a href="@Url.Action("AddBrand", "Master", new { PageID = @Context.Request.Query["PageID"].ToString(), ParentID = @Context.Request.Query["ParentID"].ToString(), ModuleID = @Context.Request.Query["ModuleID"].ToString(), ModulePageID = @Context.Request.Query["ModulePageID"].ToString() })" class="btn btn-block bg-gradient-primary   btn-xs float-left">
                        Add
                    </a>
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->

</section>

<section class="content">

    <div class="container-fluid">


        <div class="row">
            <div class="col-md-12">
                <div class="card card-outline card-primary">

                    <!-- /.card-header -->
                    <div class="card-body">
                        <div>
                            <div class="table-responsive">
                                <table class="table table-bordered example1">
                                    <thead>
                                        <tr>
                                            <th width="2%">
                                                <div align="center">Brand Code​</div>
                                            </th>
                                            <th width="15%">
                                                <div align="left">Brand Name</div>
                                            </th>
                                           @*  <th width="2%">
                                                <div align="center">Edit</div>
                                            </th> *@
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Brand_List != null && Model.Brand_List.Any())
                                        {
                                            foreach (var item in Model.Brand_List)
                                            {
                                                <tr>
                                                    <td>
                                                        <div align="center">
                                                            <a href="javascript:void(0);" onclick="EditBrand('@item.BrandId');" title="Edit">
                                                                @item.BrandCode
                                                            </a>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div align="left">@item.BrandName</div>
                                                    </td>
                                                   @*  <td>
                                                        <div align="center">
                                                            <a href="javascript:void(0);" onclick="EditBrand('@item.BrandId');" class="fa-i-big orangebt" title="Edit">
                                                                <img src="~/decintell/icons/edit.png" class="img-responsive" />
                                                            </a>
                                                        </div>
                                                    </td> *@
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="3">
                                                    <div align="center">No data found</div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                        <!-- /.tab-pane -->





                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>

        </div>

    </div>
</section>
<script>
    function EditBrand(BrandId) {

        // Constructing the URL using JavaScript
      var pageID = encodeURIComponent('@Context.Request.Query["PageID"]');
    var parentID = encodeURIComponent('@Context.Request.Query["ParentID"]');
    var moduleID = encodeURIComponent('@Context.Request.Query["ModuleID"]');
    var modulePageID = encodeURIComponent('@Context.Request.Query["ModulePageID"]');

    // Construct the full URL
    var url = '@Url.Action("EditBrand", "Master")' +
        '?BrandId=' + encodeURIComponent(BrandId) +
        '&PageID=' + pageID +
        '&ParentID=' + parentID +
        '&ModuleID=' + moduleID +
        '&ModulePageID=' + modulePageID;

    // Redirect to the URL
    window.location.href = url;
    }
</script>

