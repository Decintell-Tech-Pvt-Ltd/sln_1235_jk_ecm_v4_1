@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "AddFileSize";
    Layout = "~/Views/Shared/_ECMMaster.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3">
                <h5> File Size</h5>
            </div>
            <div class="col-lg-9">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#" onclick="UserDetailChange('Index')">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">ECM</a></li>
                    <li class="breadcrumb-item active">Master</li>
                    <li class="breadcrumb-item"><a href="@Url.Action("FileSize", "Master", new { PageID = Context.Request.Query["PageID"].ToString(), ParentID = Context.Request.Query["ParentID"].ToString(), ModuleID = Context.Request.Query["ModuleID"].ToString(), ModulePageID = Context.Request.Query["ModulePageID"].ToString() })">File Size</a></li>
                    <li class="breadcrumb-item active">Add</li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="btnwidth50 float-right ">
                    @{
                        var url = Url.Action("FileSize", "Master", new
                        {
                            PageID = Context.Request.Query["PageID"].ToString(),
                            ParentID = Context.Request.Query["ParentID"].ToString(),
                            ModuleID = Context.Request.Query["ModuleID"].ToString(),
                            ModulePageID = Context.Request.Query["ModulePageID"].ToString()
                        });
                    }
                    <button type="button"
                            class="btn btn-block bg-gradient-danger btn-xs float-left"
                            onclick="location.href='@url'"
                            title="Go back to the previous page">
                        Back
                    </button>
                </div>

            </div>

        </div><!-- /.container-fluid -->
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary card-outline p-a-2" style="height: 100%;">

                    <!-- /.card-header -->
                    <div class="card-body">

                        <div class="col-md-12">

                            <div class="row">
                                <div class="form-group col-md-2">
                                    <label>File Size (Inch)</label>
                                   @*  <input id="txtCustomerCode" type="text" maxlength="2" class="form-control" />
                                    <span id="sptxtCustomerCode" class="text-danger"></span> *@
                                    <input id="txtFileSizeInch" type="text" class="form-control" oninput="validateInput()">
                                    <span id="spFileSizeInch" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-2">
                                    <label>File Size Code</label>
                                  @*   <input id="txtCustomer" maxlength="50" name="" type="text" class="form-control" />
                                    <span id="sptxtCustomer" class="text-danger"></span> *@
                                    <input id="txtFileSizeCode" type="text" class="form-control" oninput="validateInputCode()">
                                    <span id="spFileSizeCode" class="text-danger"></span>
                                </div>

                                <div class="form-group col-md-4">
                                    <label>Remark</label>
                                 @*    <textarea name="" id="" class="form-control"></textarea>
                                    <span class="text-danger"></span> *@
                                    <textarea id="txtRemark" name="" cols="" rows="" class="form-control"></textarea>
                                    <span id="spRemark" class="text-danger"></span>
                                </div>








                                <div class="btnwidth50 float-right mr-1 " style="margin-top:46px;">
                                    <button type="button" id="btn_SubmitAddFileSize" class="btn btn-block bg-gradient-primary   btn-xs float-left"
                                            onclick="AddFileSizeData()" >
                                        Submit
                                    </button>
                                </div>


                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<script>
    var pageID = encodeURIComponent('@Context.Request.Query["PageID"]');
    var parentID = encodeURIComponent('@Context.Request.Query["ParentID"]');
    var moduleID = encodeURIComponent('@Context.Request.Query["ModuleID"]');
    var modulePageID = encodeURIComponent('@Context.Request.Query["ModulePageID"]');

       function AddFileSizeData() {
        var isValid = true;

        var FileSizeInch = $("#txtFileSizeInch").val().trim();
        var FileSizeCode = $("#txtFileSizeCode").val().trim();
        var Remarks = $("#txtRemark").val().trim();
        var OperationFlag = 1;
        var iLoggedInUserID = parseInt('@Context.Session.GetInt32("CreatedBy")');

        // Clear all previous errors
        $("#spFileSizeInch").text('');
        $("#spFileSizeCode").text('');
       

        // Validation
        if (FileSizeInch === "") {
            $("#spFileSizeInch").text("File Size (Inch) is required.");
            isValid = false;
        }

        if (FileSizeCode === "") {
            $("#spFileSizeCode").text("File Size Code is required.");
            isValid = false;
        }

       

        if (!isValid) return; // Stop if validation fails

        // Construct object
        let FileSizeDetailsJobj = {
            TxnId: 0,
            Remarks: Remarks,
            CreatedBy: iLoggedInUserID,
            CreatedDate: moment.utc(new Date()).format()
        };

        let json = {
            FileType: 'M',
            FileSizeInch: FileSizeInch,
            FileSizeCode: FileSizeCode,
            FileSizeDetailsJobj: FileSizeDetailsJobj,
            OperationFlag: OperationFlag
        };

        var JsonData = JSON.stringify(json);

        $.ajax({
            type: "POST",
            url: '@Url.Action("AddFileSize", "Master")',
            data: { JsonData: JsonData },
            datatype: 'json',
            beforeSend: function () { $('#loader').show(); },
            complete: function () { $('#loader').hide(); },
            success: function (data) {
                alert(data.response);
                var url = '@Url.Action("FileSize", "Master")' +
                    '?PageID=' + pageID +
                    '&ParentID=' + parentID +
                    '&ModuleID=' + moduleID +
                    '&ModulePageID=' + modulePageID;
                window.location.href = url;
            },
            error: function () {
                alert("An error occurred while saving.");
            }
        });
    }

</script>


<script>
    function validateInput() {
        var inputElement = document.getElementById('txtFileSizeInch');
        var inputValue = inputElement.value.trim();

        // Regular expression to match integer or decimal values
        var regex = /^-?\d*\.?\d*$/;

        if (regex.test(inputValue) || inputValue === '') {
            // Clear previous error message
            document.getElementById('spFileSizeInch').innerText = '';
        } else {
            // Display error message for invalid input
            document.getElementById('spFileSizeInch').innerText = 'Only integer or decimal values are allowed.';
            // Remove invalid characters from the input
            inputElement.value = inputValue.replace(/[^0-9.-]/g, '');
        }
    }
    function validateInputCode() {
        var inputElement = document.getElementById('txtFileSizeCode');
        var inputValue = inputElement.value.trim();

        if (inputValue.length === 2 || inputValue === '') {
            // Clear previous error message
            document.getElementById('spFileSizeCode').innerText = '';
        } else {
            // Display error message for invalid input
            document.getElementById('spFileSizeCode').innerText = 'Only two characters are allowed.';
            // Trim input value to ensure only two characters are retained
            inputElement.value = inputValue.substring(0, 2);
        }
    }

</script>