<script>
    let selectedFile = null;
    const allowedTypes = ['image/jpeg', 'image/png'];

    function validateImage(input, labelForId) {
        const file = input.files[0];
        if (!file) return;

        if (!allowedTypes.includes(file.type)) {
            alert('Only JPG and PNG images are allowed.');
            input.value = '';
            document.querySelector(`label[for="${labelForId}"]`).innerText = 'Choose file';
            return;
        }

        // Update label text
        document.querySelector(`label[for="${labelForId}"]`).innerText = file.name;
    }

    document.getElementById('HandleChartImg').addEventListener('change', function () {
        selectedFile = this.files[0];
        validateImage(this, 'HandleChartImg');

        // Show same file name in HandleInsertImg label
        if (selectedFile) {
            document.querySelector('label[for="HandleInsertImg"]').innerText = selectedFile.name;
        }
    });

    document.getElementById('HandleInsertImg').addEventListener('change', function () {
        validateImage(this, 'HandleInsertImg');
    });
</script>

