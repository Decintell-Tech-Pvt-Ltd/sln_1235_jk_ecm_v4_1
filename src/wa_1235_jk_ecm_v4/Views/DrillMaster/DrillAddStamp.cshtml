@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
	ViewData["Title"] = "DrillAddStamp";
	Layout = "~/Views/Shared/_ECMMaster.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- InstanceBeginEditable name="EditRegion1" -->


    <section class="content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3">
                    <h5>Add</h5>
                </div>
                <div class="col-lg-9">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#" onclick="UserDetailChange('Index')">Home</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">ECM</a></li>
                        <li class="breadcrumb-item active">Masters</li>
                        <li class="breadcrumb-item"><a href="@Url.Action("DrillStamp", "DrillMaster", new { PageID = Context.Request.Query["PageID"].ToString(), ParentID = Context.Request.Query["ParentID"].ToString(), ModuleID = Context.Request.Query["ModuleID"].ToString(), ModulePageID = Context.Request.Query["ModulePageID"].ToString() })">Stamps</a></li>
                        <li class="breadcrumb-item active">Add </li>               
                    </ol>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="btnwidth50 float-right ">
                        <button type="button" class="btn btn-block bg-gradient-danger btn-xs float-left"
                                onclick="history.back()" id="btnback" title="Go back to the previous page">
                            Back
                        </button>
                    </div>

                </div>

            </div><!-- /.container-fluid -->
            </div><!-- /.container-fluid -->

    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary card-outline p-a-2" style="height: 100%;">

                        <!-- /.card-header -->
                        <div class="card-body">

                            <div class="col-md-12 mr-1">

                                <div class="row">

                                    <div class="form-group col-md-2">
                                        <label>Product Line</label>
                                        <select class="form-control select2">
                                            <option>Select</option>
                                            <option selected>DRILLS </option>
                                            <option>TAPS </option>
                                            <option>DIES </option>

                                        </select>


                                    </div>


                                    <div class="form-group col-md-2">
                                        <label>Brand</label>
                                        <select name="" class="form-control select2">
                                            <option>Select</option>
                                            <option value="2E">TWO FILES  (2E)</option>
                                            <option value="2Q">Second Quality (2Q)</option>
                                            <option value="3E">THREE FILES (3E)</option>
                                            <option value="AB">ARCHER  BRAND (AB)</option>
                                            <option value="AC">ABC (AC)</option>
                                            <option value="AF">AFILE (AF)</option>
                                            <option value="AG">AGROMEC (AG)</option>
                                            <option value="AK">AKSI (AK)</option>
                                            <option value="AL">ALFAERRE (AL)</option>
                                            <option value="AM">AMEX  (AM)</option>
                                            <option value="AR">ASEER (AR)</option>
                                            <option value="AS">ASIAN (AS)</option>
                                            <option value="AT">ATLAS (AT)</option>

                                        </select>

                                    </div>



                                    <div class="form-group col-md-2">
                                        <label>Size </label>
                                        <select class="form-control select2" style="width: 100%;">
                                            <option>Select</option>

                                            <option value="1">0100 - 1.0 mm (Dia)</option>
                                            <option value="1">0132 - 1/32 inch (Dia)</option>
                                        </select>

                                    </div>


                                    <div class="form-group col-md-4">
                                        <label>Type </label>
                                        <select class="form-control select2">
                                            <option>Select</option>

                                            <option>PARALLEL-HSS CENTRE DRILL (CD) </option>
                                            <option>
                                                PARALLEL-HSS GROUND FLUTE JOBBER SERIES (PG)
                                            </option>
                                            <option>
                                                TOOL BIT-ROUND (TR)
                                            </option>
                                            <option>
                                                TAPS-HAND TAPS (TH)
                                            </option>
                                            <option>
                                                DIES-SCREWING (SD)
                                            </option>
                                            <option>
                                                CARBIDE BURR-CONE SHAPE (CC)
                                            </option>
                                        </select>
                                    </div>

                                    <div class="form-group col-md-2">
                                        <label>Sub Type </label>
                                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true" id="dllFileSubType" onChange="FileCodeAdd();">
                                            <option value="0">Select</option>

                                            <option value="2">Regular (R)</option>


                                        </select>
                                    </div>



                                    <div class="form-group col-md-2">
                                        <label>Sales </label>
                                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true" id="dllFileSubType" onChange="FileCodeAdd();">
                                            <option value="0">Select</option>

                                            <option value="1">Export</option>

                                            <option value="2">Domestic</option>
                                        </select>
                                    </div>



                                    <div class="col-md-2">
                                        <label class="control-label padd0">Image Upload</label> &nbsp;
                                        <div class="input-group">
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" id="exampleInputFile">
                                                <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="btnwidth50 float-right mr-1 " style="margin-top:35px;">
                                        <button id="btn_DrillAddStamp" type="button" class="btn btn-block bg-gradient-primary   btn-xs float-left"
                                                onclick="location.href='non-file-Stamp.html'" title="Go to the next page">
                                            Submit
                                        </button>
                                    </div>

                                </div>








                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </section>




    <!-- InstanceEndEditable -->
</div>