                                        </label>
                                        <input id="txtDimensionValue" maxlength="50" name="" type="text" class="form-control" />
                                        <span id="sptxtDimensionValue" class="text-danger"></span>
                                    </div>




                                    <div class="form-group col-md-2">
                                        <label>Dimension Type</label>
                                       @Html.DropDownListFor(m => m.ProdId, new SelectList(Model.LookupValues_List, "ID", "LookupValue"), "Select", new { @class = "form-control select2", @id = "ddlDimensionType" })
