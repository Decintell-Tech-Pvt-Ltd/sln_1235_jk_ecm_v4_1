            data: { JsonData: JSON.stringify(json) },
            dataType: 'json',
            beforeSend: function () { $('#loader').show(); },
            complete: function () { $('#loader').hide(); },
            success: function (res) {
                alert(res.response);
                   var url = '@Url.Action("DrillSize", "DrillMaster")' +
                    '?PageID=' + pageID +
                    '&ParentID=' + parentID +
                    '&ModuleID=' + moduleID; 
                window.location.href = url;
            },
            error: function () {
