                                    </div>




                                    <div class="form-group col-md-2">
                                        <label>Dimension Type</label>
                                        @Html.DropDownListFor(m => m.ProdId, new SelectList(Model.LookupValues_List, "ID", "LookupValue"), "Select", new { @class = "form-control select2", @id = "ddlDimensionType", onchange = "clearError('spddlDimensionType')" })
                                        <span id="spddlDimensionType" class="text-danger"></span>
                                    </div>



                                    <div class="form-group col-md-2">
                                        <label>Standard</label>
                                       
                                        @Html.DropDownListFor(m => m.ProdId, new SelectList(Model.LookupStandard_List, "ID", "LookupValue"), "Select", new { @class = "form-control select2", @id = "ddlStandard", onchange = "clearError('spddlStandard')" })
                                        <span id="spddlStandard" class="text-danger"></span>
                                    </div>


                                    <div class="btnwidth50 float-right mr-1 " style="margin-top:35px;">
                                        <button type="button" class="btn btn-block bg-gradient-primary   btn-xs float-left"
                                                onclick="AddFileSizeData()" id="btnsubmit" title="Go to the next page">
                                            Submit
                                        </button>
                                    </div>

                                </div>








                            </div>
                        </div>
                    </div>
                </div>
                Note: Dimension Code should be unique

                <!-- /.card -->
            </div>
        </div>
    </section>
</div>

<script>
    var pageID = encodeURIComponent('@Context.Request.Query["PageID"]');
    var parentID = encodeURIComponent('@Context.Request.Query["ParentID"]');
    var moduleID = encodeURIComponent('@Context.Request.Query["ModuleID"]');
  

       function EditFileSizeData() {
          let isValid = true;

        // Read values from UI
        let ProductLineId = $("#ddlproductline").val();
        let DimensionCode = $("#txtDimensionCode").val().trim();
        let DimensionValue = $("#txtDimensionValue").val().trim();
        let DimensionTypeId = $("#ddlDimensionType").val();
        let StandardId = $("#ddlStandard").val();
          let SizeId = $("#hdnSizeId").val();
        let OperationFlag = 2;
        let iLoggedInUserID = parseInt('@Context.Session.GetInt32("CreatedBy")');

        // Clear previous errors
        $("#spddlproductline").text('');
        $("#sptxtDimensionCode").text('');
        $("#sptxtDimensionValue").text('');
        $("#spddlDimensionType").text('');
        $("#spddlStandard").text('');

        // Validation
        if (!ProductLineId || ProductLineId === "Select") {
            $("#spddlproductline").text("Product Line is required.");
            isValid = false;
        }

        if (DimensionCode === "") {
            $("#sptxtDimensionCode").text("Dimension Code is required.");
            isValid = false;
        }

        if (DimensionValue === "") {
            $("#sptxtDimensionValue").text("Dimension Value is required.");
            isValid = false;
        }

        if (!DimensionTypeId || DimensionTypeId === "Select") {
            $("#spddlDimensionType").text("Dimension Type is required.");
            isValid = false;
        }

        if (!StandardId || StandardId === "Select") {
            $("#spddlStandard").text("Standard is required.");
            isValid = false;
        }

        if (!isValid) return;

        // Construct JSON
        let json = {
            SizeId: SizeId,
            ProdLineId: ProductLineId,
            DimensionCode: DimensionCode,
            DimensionValue: DimensionValue,
            DimensionTypeId: DimensionTypeId,
            StandardId: StandardId,
            CreatedBy: iLoggedInUserID,
            OperationFlag: OperationFlag,
            CreatedDate: moment.utc(new Date()).format()
        };

        $.ajax({
            type: "POST",
            url: '@Url.Action("DroAddFileSize", "DrillMaster")',
            data: { JsonData: JSON.stringify(json) },
            dataType: 'json',
            beforeSend: function () { $('#loader').show(); },
            complete: function () { $('#loader').hide(); },
            success: function (res) {
                alert(res.response);
                   var url = '@Url.Action("DrillSize", "DrillMaster")' +
                    '?PageID=' + pageID +
                    '&ParentID=' + parentID +
                    '&ModuleID=' + moduleID ;
                window.location.href = url;
            },
            error: function () {
                alert("An error occurred while saving.");
            }
        });
    }
        function AddFileSizeData() {

        let isValid = true;

        // Read values from UI
        let ProductLineId = $("#ddlproductline").val();
        let DimensionCode = $("#txtDimensionCode").val().trim();
